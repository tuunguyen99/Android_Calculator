<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/hang_doi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="end|bottom"
        android:fontFamily="@font/sohoc"
        android:text=""
        android:textSize="50dp" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="end|bottom"
        android:fontFamily="@font/sohoc"
        android:text="0"
        android:textSize="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/MC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#808080"
            android:text="MC"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/MR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MR"
            android:background="#808080"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/Madd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M+"
            android:background="#808080"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/Msub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M-"
            android:background="#808080"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/MS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MS"
            android:background="#808080"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/M"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:background="#808080"
            android:textSize="20dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="%"
            android:background="#808080"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/CE"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="CE"
            android:background="#808080"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/C"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="C"
            android:background="#808080"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/BS"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="BS"
            android:background="#808080"
            android:textSize="30dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mot_chia_x"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="1/x"
            android:background="#808080"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/pow2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="x^2"
            android:background="#808080"
            android:textSize="20dp"></Button>
        <Button
            android:id="@+id/sqrt"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="âˆšx"
            android:background="#808080"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#808080"
            android:text="/"
            android:textSize="20dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/mutil"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="*"
            android:background="#808080"
            android:textSize="26dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="-"
            android:background="#808080"
            android:textSize="30dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+"
            android:background="#808080"
            android:textSize="30dp"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addorsub"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+/-"
            android:background="#808080"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="."
            android:background="#808080"
            android:textSize="30dp"></Button>
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp"
            android:background="#e8234569"></Button>

    </LinearLayout>


</LinearLayout>